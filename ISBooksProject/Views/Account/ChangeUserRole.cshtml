@{ }

@model ISDomain.Identity.LibraryUser
@{ ViewData["Title"] = "ChangeUserRole"; }
<br />
<br />
<hr />
<h4 class="mt-3">Change User Role</h4>
<hr />
<br />
<form asp-action="ChangeUserRole" method="post" class="text-center">
    @Html.HiddenFor(m => m.Id)
    <select asp-for="Role" asp-items="Html.GetEnumSelectList<ISDomain.Identity.Role>()" class="mt-4">
        <option value="">Select Desired Role</option>
    </select>
    <br />
    <button type="submit" class="btn btn-success mt-5">Save</button>
</form>