@model ISDomain.DTO.AuthorDto

@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


<div class="container">
    <form asp-action="Index" method="post">
        @Html.HiddenFor(m => m.Authors)
        <input asp-for="Date" type="date" />
        <input type="submit" value="Filter" class="btn btn-primary" />
    </form>
    <div class="m-3">
        <a class="btn btn-primary" asp-controller="Author" asp-action="Create">Add New Author   </a>
    </div>

    @for (int i = 0; i < Model.Authors.Count; i++)
    {
        var item = Model.Authors[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
        }


        <div class="col-md-3 m-4">
            <div class="card" style="width: 18rem; height: 40rem;">
                <img class="card-img-top" src="@item.Image" style="height: 50%" alt="Movie Image" />

                <div class="card-body">
                    <h3 class="card-title">@item.Name</h3>
                    <p class="card-text">@item.Country</p>
                    <p class="card-text">@item.Biography</p>
                    <p class="card-text">Publish:@item.Birthday</p>
                </div>

                <div class="card-footer">
                    <a asp-action="AddBookToCart" asp-route-id="@item.Id" class="btn btn-primary">View Published Books</a>
                    <a asp-controller="Author" asp-action="Edit" asp-route-t="@item.Id" class="btn btn-secondary">Edit</a>
                    <a asp-controller="Author" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div> if (i % 3 == 2)
        {
            @:</div>
        }
     }
</div>
