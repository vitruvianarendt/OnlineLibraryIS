@model ISDomain.DomainModels.Order

<div class="container">
    <h4 class="mt-3">Tickets in order with id @Model.Id</h4>
    <div>
        <a class="btn btn-success">Order for @Model.User.Email</a>
    </div>
    @for (int i = 0; i < Model.BooksInOrder.Count(); i++)
    {
        var item = Model.BooksInOrder.ElementAt(i).Books;

        if (i % 3 == 0)
        {
            @:<div class="row">
        }

        <div class="col-md-3 m-4">
            <div class="card" style="width: 18rem; height: 30rem; background-color: #023618">
                 <img class="card-img-top" src="@item.CoverImage" style="height: 50%" alt="Movie Image!" />
                 <div class="card-body">
                    <h3 class="card-title">@item.BookName</h3>
                    <p class="card-text">@item.BookGenre</p>
                    <p class="card-text">Publishing Date: @item.Date</p>
                    <h5>Ticket Price: @item.BookPrice</h5>
                 </div>
            </div>
        </div>
        if (i % 3 == 2)
        {
          @:</div>
        }
    }
</div>